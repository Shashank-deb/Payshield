# =============================================================================
# PayShield Environment Configuration Template
# =============================================================================
# SECURITY: Copy this to .env and fill in secure values
# DO NOT commit .env files to version control!

# ------------------------------
# Database Configuration
# ------------------------------
POSTGRES_USER=payshield
POSTGRES_PASSWORD=<GENERATE_STRONG_PASSWORD>
POSTGRES_DB=payshield

# Application Database Connection
DB_URL=jdbc:postgresql://db:5432/payshield
DB_USERNAME=payshield
DB_PASSWORD=<SAME_AS_POSTGRES_PASSWORD>

# ------------------------------
# JWT Security
# ------------------------------
# GENERATE 32+ CHARACTER SECRET
SECURITY_JWT_SECRET=<GENERATE_SECURE_JWT_SECRET_32_CHARS_MINIMUM>
SECURITY_JWT_TTL_SECONDS=3600

# ------------------------------
# Bootstrap Admin
# ------------------------------
# CHANGE THESE CREDENTIALS
BOOTSTRAP_ADMIN_EMAIL=admin@yourcompany.com
BOOTSTRAP_ADMIN_PASSWORD=<GENERATE_SECURE_ADMIN_PASSWORD>

# ------------------------------
# Application Settings
# ------------------------------
APP_PORT=2406
ACTUATOR_PORT=9090
STORAGE_BASE_PATH=/app/storage

# ------------------------------
# Outbox Configuration
# ------------------------------
OUTBOX_ENABLED=true
OUTBOX_POLL_INTERVAL_MS=5000
OUTBOX_BATCH_SIZE=50

# ------------------------------
# Upload Hardening / Antivirus
# ------------------------------
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# ------------------------------
# Field-level Encryption (AES-GCM)
# ------------------------------
# Base64-encoded 32 random bytes
PSP_AES_KEY=Base64Of32ByteKeyHere==

# ------------------------------
# Alerts (Slack / Signed Webhooks)
# ------------------------------
SLACK_WEBHOOK_URL=
WEBHOOK_TARGET_URL=
WEBHOOK_SIGNING_SECRET=

# ------------------------------
# Email (optional)
# ------------------------------
MAIL_HOST=
MAIL_PORT=587
MAIL_USER=
MAIL_PASS=

# ------------------------------
# OpenTelemetry (optional)
# ------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# ------------------------------
# Audit (tamper-evident logging)
# ------------------------------
AUDIT_HMAC_SECRET=<GENERATE_SECURE_HMAC_SECRET>
AUDIT_RETENTION_DAYS=180
